<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:semantic="sap.f.semantic" xmlns:f="sap.ui.layout.form" xmlns:u="sap.ui.unified">
    <Dialog id="approveDialog" resizable="true" draggable="true" showHeader="false" afterClose="onAfterClose" contentWidth="780px" contentHeight="500px">
        <beginButton>
            <Button id="approveBtn" text="Approve" press="approveUploads" />
        </beginButton>
        <endButton>
            <Button id="cancelBtn" text="Cancel" press="closeApprovalDialog" />
        </endButton>
        <content>
            <semantic:SemanticPage id="approvePage" headerPinnable="false" toggleHeaderOnTitleClick="false" busy="{objectView>/busy}" busyIndicatorDelay="{objectView>/delay}">
                <semantic:titleHeading>
                    <Title id="approvePageTitle" text="" level="H2" />
                </semantic:titleHeading>

                <semantic:headerContent>
                    <l:HorizontalLayout id="apporveHeaderL">
                        <l:VerticalLayout id="apporveHeaderV1" class="sapUiMediumMarginEnd">
                            <ObjectAttribute id="approveDesc" title="{i18n>detailPayrollDesc}" text="" />
                            <ObjectAttribute id="approveCompanyCode" title="{i18n>detailCompanyCode}" text="" />
                            <ObjectAttribute id="aprroveCurrency" title="{i18n>detailCurrencyCode}" text="" />
                        </l:VerticalLayout>
                        <l:VerticalLayout id="apporveHeaderV2" class="sapUiMediumMarginEnd">
                            <ObjectAttribute id="approvePayrollDate" title="{i18n>detailPayrollDate}" text="" />
                            <ObjectAttribute id="approveEffectivePeriod" title="{i18n>detailEffectivePeriod}" text="" />
                        </l:VerticalLayout>
                    </l:HorizontalLayout>
                </semantic:headerContent>
                <semantic:content>
                    <l:VerticalLayout>
                        <l:HorizontalLayout id="approveDtlV" class="sapUiContentPadding">
                            <Table
                                id="approveSummaryList"
                                sticky="HeaderToolbar,ColumnHeaders"
                                class="sapUiSmallMarginTop"
                                mode="None"
                                width="auto"
                                items="{
							path: 'items',
							sorter: {
								path: 'fmno',
								descending: false
							}
						}"
                                updateFinished=".onListUpdateFinished"
                                noDataText="{i18n>detailLineItemTableNoDataText}"
                                busyIndicatorDelay="{objectView>/tableBusyDelay}"
                            >
                                <columns>
                                    <Column id="totalFmnoColumn">
                                        <Text id="totalFmnoTxt" text="FMNO" />
                                    </Column>
                                    <Column id="totalLineItemColumn">
                                        <Text id="totalLineItemTxt" text="Total Number of Line Items" />
                                    </Column>
                                    <Column id="totalValidLineColumn" demandPopin="false" minScreenWidth="Tablet">
                                        <Text id="totalValidLIneTxt" text="Total Number of Valid Line Items" />
                                    </Column>
                                    <Column id="totalErrorLineColumn" hAlign="End" demandPopin="true" minScreenWidth="Tablet">
                                        <Text id="totalErrorLineTxt" text="Total Number of Error Line Items" />
                                    </Column>
                                    <Column id="totalAmountColumn" hAlign="End">
                                        <Text id="totalAmountTxt" text="Total Amount" />
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem id="colListItm">
                                        <cells>
                                            <Text text="100910" />
                                            <Text text="69" />
                                            <Text text="69" />
                                            <Text text="0" />
                                            <Text text="0" />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </l:HorizontalLayout>
                        <l:HorizontalLayout class="sapUiContentPadding">
                            <Text text="Describes what happens when click approve, any errors will be skipped and will have to be manually reprocessed. Recommed download errors (link above)." />
                        </l:HorizontalLayout>
                    </l:VerticalLayout>
                </semantic:content>
            </semantic:SemanticPage>
        </content>
    </Dialog>
</core:FragmentDefinition>
