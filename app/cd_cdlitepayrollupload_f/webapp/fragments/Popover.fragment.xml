                    <DisplayListItem id="popCurrencyCode" label="GL Currrency Code" value="" />
                    <DisplayListItem id="popFCAT" label="FCAT" />
                    <DisplayListItem id="popLocCode" label="Location Code" value="" />
                    <DisplayListItem id="popPernr" label="Personal No." />
