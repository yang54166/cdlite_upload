<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
    <Popover id="myPopover" title="More Information" class="sapUiContentPadding" placement="Left" initialFocus="action">
        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button id="action" text="Close" press="handleActionPress" />
            </Toolbar>
        </footer>
        <l:VerticalLayout class="sapUiContentPadding" width="100%">
            <l:content>
                <List id="popoverLst">
                    <DisplayListItem id="popGLAct" label="{i18n>colGlAccount}" value="" />
                    <DisplayListItem id="popGLActCB" label="{i18n>colGlAccountCB}" value="" />
                    <DisplayListItem id="popGLCostCenter" label="{i18n>colGlCostCenter}" value="" />
                    <DisplayListItem id="popCurrencyCode" label="{i18n>colCurrency}" value="" />
                    <DisplayListItem id="popFCAT" label="{i18n>colFCAT}" />
                    <DisplayListItem id="popLocCode" label="{i18n>colLocation}" value="" />
                    <DisplayListItem id="popPernr" label="{i18n>colPernr}" />
                    <DisplayListItem id="popSkillCode" label="{i18n>colSkillCode}" />
                </List>
            </l:content>
        </l:VerticalLayout>
    </Popover>
</core:FragmentDefinition>
