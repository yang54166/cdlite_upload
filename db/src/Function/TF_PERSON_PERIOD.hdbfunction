FUNCTION "TF_PERSON_PERIOD"(IP_PERIOD NVARCHAR(20))
    RETURNS TABLE(
        "FMNO" NVARCHAR(8) ,
        "INDEX" NVARCHAR(6) ,
        "PATH" NVARCHAR(32) ,
        "BAND" NVARCHAR(32),
        "COST_CENTER" NVARCHAR(10) 
					)
    LANGUAGE SQLSCRIPT
    SQL SECURITY INVOKER AS
BEGIN

V_PERSON_P_D = 
SELECT
"FMNO",
"INDEX",
"PATH",
"BAND",
"COST_CENTER"
FROM CVC_R_MD_PERSON_PERIOD
	(placeholder."$$IP_PERIOD$$"=>BIND_AS_VALUE(:IP_PERIOD));	  
return select * from :V_PERSON_P_D;	
END;