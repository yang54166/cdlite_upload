<core:FragmentDefinition xmlns:layout="sap.ui.layout" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
    <Dialog title="Legal Entity Mapping" >
        <buttons>
            <Button text="Save" press="onAddnEditLE" />
            <Button text="Cancel" press="onCancelLE" />
        </buttons>
		<f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanL="2" labelSpanM="2" emptySpanL="5" emptySpanM="5">
			<f:content>
				<Label text="Legal Entity Group Code" required="true"></Label>
				<Input id="idEmp" value="{fragmentModel>/legalEntityGroupCode}" ></Input>
				<Label text="Company Code" required="true"></Label>
				<Input id="idName" value="{fragmentModel>/companyCode}"></Input>
			</f:content>
		</f:SimpleForm>

    </Dialog>
</core:FragmentDefinition>
