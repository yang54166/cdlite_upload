<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:semantic="sap.f.semantic" xmlns:f="sap.ui.layout.form" xmlns:u="sap.ui.unified">
    <Dialog id="approveDialog" resizable="true" draggable="true" showHeader="false" afterClose="onAfterClose" contentWidth="780px" contentHeight="450px">
        <beginButton>
            <Button text="Approve" enabled="{totalAmt>/approvalDisabled}" press="approveUploads" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="closeApprovalDialog" />
        </endButton>
        <content>
            <semantic:SemanticPage id="approvePage" headerPinnable="false" toggleHeaderOnTitleClick="false" busy="{objectView>/busy}" busyIndicatorDelay="{objectView>/delay}">
                <semantic:titleHeading>
                    <Title id="approvePageTitle" text="" level="H2" />
                </semantic:titleHeading>

                <semantic:headerContent>
                    <l:HorizontalLayout id="apporveHeaderL">
                        <l:VerticalLayout id="apporveHeaderV1" class="sapUiMediumMarginEnd">
                            <ObjectAttribute id="approveDesc" title="{i18n>detailPayrollDesc}" text="" />
                            <ObjectAttribute id="approveCompanyCode" title="{i18n>detailCompanyCode}" text="" />
                            <ObjectAttribute id="aprroveCurrency" title="{i18n>detailCurrencyCode}" text="" />
                        </l:VerticalLayout>
                        <l:VerticalLayout id="apporveHeaderV2" class="sapUiMediumMarginEnd">
                            <ObjectAttribute id="approvePayrollDate" title="{i18n>detailPayrollDate}" text="" />
                            <ObjectAttribute id="approveEffectivePeriod" title="{i18n>detailEffectivePeriod}" text="" />
                        </l:VerticalLayout>
                    </l:HorizontalLayout>
                </semantic:headerContent>
                <semantic:content>
                    <l:VerticalLayout>
                        <l:HorizontalLayout id="approveDtlV">
                            <Table id="approveSummaryList" sticky="HeaderToolbar,ColumnHeaders" items="{approvalView>/}" class="sapUiSmallMarginTop" mode="None" width="auto" updateFinished=".onSummaryListFinished">
                                <columns>
                                    <Column id="statusHeader">
                                        <Text id="totalFmnoTxt" text="Status" />
                                    </Column>
                                    <Column id="lineCntCol">
                                        <Text text="Number of Lines" />
                                    </Column>
                                    <Column id="fmnoCntCol" demandPopin="false" minScreenWidth="Tablet">
                                        <Text text="Number of FMNO's" />
                                    </Column>
                                    <Column id="totalAmtCol" demandPopin="false" minScreenWidth="Tablet">
                                        <Text text="Total Amount" />
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem id="colListItm">
                                        <cells>
                                            <Text text="{approvalView>STATUS}" />
                                            <Text text="{approvalView>LINES_COUNT}" />
                                            <Text text="{approvalView>FMNO_COUNT}" />
                                            <Text text="{approvalView>TOTAL_AMOUNT}" />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </l:HorizontalLayout>
                        <l:HorizontalLayout class="sapUiContentPadding">
                            <FormattedText htmlText="{totalAmt>/HTML}" />
                        </l:HorizontalLayout>
                        <l:HorizontalLayout class="sapUiContentPadding">
                            <Text text="Describes what happens when click approve, any errors will be skipped and will have to be manually reprocessed. Recommed download errors (link above)." />
                        </l:HorizontalLayout>
                    </l:VerticalLayout>
                </semantic:content>
            </semantic:SemanticPage>
        </content>
    </Dialog>
</core:FragmentDefinition>
