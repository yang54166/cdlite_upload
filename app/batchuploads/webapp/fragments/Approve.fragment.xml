<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:semantic="sap.f.semantic" xmlns:f="sap.ui.layout.form" xmlns:u="sap.ui.unified">
    <Dialog id="approveDialog" resizable="true" draggable="true" contentWidth="780px" contentHeight="500px" >
        <beginButton>
            <Button id="submitBtn" text="Approve" press="submitUploads" />
        </beginButton>
        <endButton>
            <Button id="closeBtn" text="Cancel" press="closeApprovalDialog" />
        </endButton>

        <semantic:SemanticPage id="approvePage" headerPinnable="false" toggleHeaderOnTitleClick="false" busy="{objectView>/busy}" busyIndicatorDelay="{objectView>/delay}">
            <semantic:titleHeading>
                <Title id="approvePageTitle" text="{
					parts: [
						'i18n>commonItemTitle',
						'ID'
					],
					formatter: 'jQuery.sap.formatMessage'
				}" level="H2" />
            </semantic:titleHeading>

            <semantic:headerContent>
                <l:HorizontalLayout id="apporveHeaderL">
                    <l:VerticalLayout id="apporveHeaderV1" class="sapUiMediumMarginEnd">
                        <ObjectAttribute id="approveId" title="{i18n>detailPayrollDesc}" text="{batchDescription}" />
                        <ObjectAttribute id="approveDesc" title="{i18n>detailCompanyCode}" text="{glCompanyCode}" />
                        <ObjectAttribute id="approveCompanyCode" title="{i18n>detailCurrencyCode}" text="{currencyCode}" />
                    </l:VerticalLayout>
                    <l:VerticalLayout id="apporveHeaderV2" class="sapUiMediumMarginEnd">
                        <ObjectAttribute id="approvePayrollDate" title="{i18n>detailPayrollDate}" text="{payrollDate}" />
                        <ObjectAttribute id="approveTransactionType" title="{i18n>detailEffectivePeriod}" text="{effectivePeriod}" />
                    </l:VerticalLayout>
                </l:HorizontalLayout>
            </semantic:headerContent>
            <semantic:content>
                <l:VerticalLayout id="approveDtlV">
                    <Table
                        id="approveSummaryList"
                        sticky="HeaderToolbar,ColumnHeaders"
                        class="sapUiSmallMarginTop"
                        mode="None"
                        width="auto"
                        items="{
							path: 'items',
							sorter: {
								path: 'fmno',
								descending: false
							}
						}"
                        updateFinished=".onListUpdateFinished"
                        noDataText="{i18n>detailLineItemTableNoDataText}"
                        busyIndicatorDelay="{objectView>/tableBusyDelay}"
                      
                    >
                        <columns>
                            <Column id="totalFmnoColumn">
                                <Text id="totalFmnoTxt" text="FMNO" />
                            </Column>
                            <Column id="totalLineItemColumn">
                                <Text id="totalLineItemTxt" text="Total Number of Line Items" />
                            </Column>
                            <Column id="totalValidLineColumn" demandPopin="false" minScreenWidth="Tablet">
                                <Text id="totalValidLIneTxt" text="Total Number of Valid Line Items" />
                            </Column>
                            <Column id="totalErrorLineColumn" hAlign="End" demandPopin="true" minScreenWidth="Tablet">
                                <Text id="totalErrorLineTxt" text="Total Number of Error Line Items" />
                            </Column>
                            <Column id="totalAmountColumn" hAlign="End">
                                <Text id="totalAmountTxt" text="Total Amount" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem id="colListItm">
                                <cells>
                                    <Text id="txtTotalFMNO" text="{fmno}" />
                                    <Text id="txtTotalLineItems" text="{payrollCode}" />
                                    <Text id="txtTotalValidItems" text="{payrollCodeSequence}" />
                                    <Text id="txtTotalErrorItems" text="{name}" />
                                    <Text id="txtTotalAmount" text="{name}" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </l:VerticalLayout>
            </semantic:content>
        </semantic:SemanticPage>
    </Dialog>
</core:FragmentDefinition>
