<core:FragmentDefinition xmlns:layout="sap.ui.layout" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
    <Dialog title="Ledger Control">
        <buttons>
            <Button text="Save" press="onAddnEditLC" />
            <Button text="Cancel" press="onCancelLC" />
        </buttons>
        <f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanL="2" labelSpanM="2" emptySpanL="5" emptySpanM="5">
            <f:content>
                <Label text="Transaction Type" required="true" />
                <Input  value="{fragmentModel>/transactionType}" />
                <Label text="Doc Type" />
                <Input  value="{fragmentModel>/docType}" />
                <Label text="Ledger Group"  />
                <Input  value="{fragmentModel>/ledgerGroup}" />
                <Label text="Doc Header Text"  />
                <Input  value="{fragmentModel>/docHeaderText}" />
            </f:content>
        </f:SimpleForm>
    </Dialog>
</core:FragmentDefinition>
