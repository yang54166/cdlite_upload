<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Table
        id="tblLEData"
        mode="MultiSelect"
        growing="true"
        growingScrollToLoad="true"
        items="{
                    path: '/LegalEntityGrouping',
                    sorter: {
                        path: 'legalEntityGroupCode',
                        descending: false
                    },
                    parameters : {
                            $$updateGroupId : 'ServiceGroupId'
                    }
                }"
    >
        <headerToolbar>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button text="Add" icon="sap-icon://add" press="onAddLegalEntry" />
                <Button text="Edit" icon="sap-icon://edit" press="onEditLegalEntry" />
                <Button text="Delete" icon="sap-icon://delete" press="onDeleteLegalEntry" />
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="Leagal Entity Group code" />
            </Column>
            <Column>
                <Text text="Company Code" />
            </Column>
        </columns>

        <items>
            <ColumnListItem>
                <cells>
                    <ObjectIdentifier title="{legalEntityGroupCode}" />
                    <ObjectIdentifier title="{companyCode}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>
